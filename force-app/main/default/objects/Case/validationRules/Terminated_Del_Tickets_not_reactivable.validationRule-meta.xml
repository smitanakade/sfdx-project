<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Terminated_Del_Tickets_not_reactivable</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISCHANGED(Status), ISPICKVAL(PRIORVALUE(Status),&#39;Terminate&#39;))</errorConditionFormula>
    <errorMessage>You can not reactivate a terminated Delivery Ticket. Restart an Opportunity and a relevant Delivery Ticket.</errorMessage>
</ValidationRule>
