<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Surname_Character_Limit</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(ISBLANK(LastName)) &amp;&amp; LEN(LastName) &gt; 50</errorConditionFormula>
    <errorMessage>The Last Name cannot exceed 50 characters</errorMessage>
</ValidationRule>
