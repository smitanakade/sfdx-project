<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>An_active_template_cannot_be_modified</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(ISNEW()) &amp;&amp; ISPICKVAL(Status__c, &#39;Active&#39;) &amp;&amp; NOT(ISCHANGED(Status__c))</errorConditionFormula>
    <errorMessage>An active template cannot be modified.</errorMessage>
</ValidationRule>
