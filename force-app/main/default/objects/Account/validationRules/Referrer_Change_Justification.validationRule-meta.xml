<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Referrer_Change_Justification</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
NOT(ISNEW()),
PRIORVALUE(Referrer__c) &lt;&gt; &quot;&quot;,
ISCHANGED(Referrer__c),
ISBLANK(Referrer_Change_Justification__c))</errorConditionFormula>
    <errorMessage>Please enter or modify the Referrer Change Justification</errorMessage>
</ValidationRule>
